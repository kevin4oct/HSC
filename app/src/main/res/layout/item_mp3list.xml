<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="285dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="28dp">

    <!--封面-->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_cover_mp3list"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        app:actualImageScaleType="fitXY"
        app:overlayImage="@mipmap/view_disc_center"
        app:placeholderImage="@mipmap/place"
        app:placeholderImageScaleType="fitXY"
        app:progressBarAutoRotateInterval="1000"
        app:progressBarImage="@mipmap/loading"
        app:progressBarImageScaleType="centerInside"
        app:roundAsCircle="true"
        app:roundingBorderColor="@android:color/black"
        app:roundingBorderWidth="2dp" />

    <!--专辑名称-->
    <TextView
        android:id="@+id/tv_name_mp3list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_bg_white"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:text="音频名称"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>