<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--控制区域-->
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/controler_mp3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_zero_to_gray"
        app:layout_heightPercent="20%h">

        <!--播放进度文字提示-->
        <TextView
            android:id="@+id/tv_progress_mp3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:gravity="center"
            android:text="@string/time_start"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_heightPercent="14%h"
            app:layout_widthPercent="10%w" />

        <!--音频时长-->
        <TextView
            android:id="@+id/tv_long_mp3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:text="@string/time_start"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_heightPercent="14%h"
            app:layout_widthPercent="10%w" />

        <!--进度条-->
        <SeekBar
            android:id="@+id/seekbar_mp3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_progress_mp3"
            android:layout_toStartOf="@+id/tv_long_mp3"
            android:visibility="gone" />

        <!--播放按钮-->
        <ImageView
            android:id="@+id/iv_play_mp3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_play"
            app:layout_heightPercent="60%h"
            app:layout_widthPercent="60%h" />

        <!--上一曲-->
        <ImageView
            android:id="@+id/iv_last_mp3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@+id/iv_play_mp3"
            android:contentDescription="@string/last"
            android:src="@drawable/selector_last"
            app:layout_heightPercent="40%h"
            app:layout_marginRightPercent="4%w"
            app:layout_widthPercent="40%h" />

        <!--下一曲-->
        <ImageView
            android:id="@+id/iv_next_mp3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/iv_play_mp3"
            android:contentDescription="@string/next"
            android:src="@drawable/selector_next"
            app:layout_heightPercent="40%h"
            app:layout_marginLeftPercent="4%w"
            app:layout_widthPercent="40%h" />

        <!--播放顺序-->
        <ImageView
            android:id="@+id/iv_order_mp3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:contentDescription="播放顺序"
            android:src="@mipmap/icon_order_circular"
            app:layout_heightPercent="20%h"
            app:layout_marginLeftPercent="4%w"
            app:layout_widthPercent="20%h" />

        <!--切换播放列表-->
        <ImageView
            android:id="@+id/iv_list_mp3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="切换播放列表"
            android:src="@mipmap/icon_list_unpress"
            app:layout_heightPercent="20%h"
            app:layout_marginRightPercent="4%w"
            app:layout_widthPercent="20%h" />

    </com.zhy.android.percent.support.PercentRelativeLayout>
</RelativeLayout>